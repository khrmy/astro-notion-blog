<style lang="scss">
	.profile{
		padding:5% 0;
		display:flex;
		justify-content:space-between;
		.img{
			width:20%;
			img{
				border-radius:50%;
				box-shadow:3px 3px 3px #ccc;
			}
		}
		.txt{
			width:76%;
			h3{
				font-size:20px;
				font-weight:700;
				padding:0 0 2%;
			}
			.sns_link{
				padding:2% 0 0;
				ul{
					list-style:none;
					padding:0;
					li{
						display:inline-block;
						padding: 0 16px 0 0;
						a{
							svg{
								width:40px;
								height:auto;
								transition:all 0.3s ease;
								transform: scale(1);
								vertical-align: middle;
								@media #{$sp}{
									width:30px;
								}
							}
							&:hover{
								svg{
									transform: scale(1.1);
								}
							}
						}
						&:nth-of-type(2){
							a svg{
								width: 50px;
								height:auto;
								@media #{$sp}{
									width:36px;
								}
							}
						}
					}
				}
			}
		}
	}
</style>
